<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bggco"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:fillViewport="true">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".MainActivity">


        <TextView
            android:id="@+id/chooseEyeColorTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/font11"
            android:gravity="center_horizontal"
            android:text="CHOOSE YOUR HAIR COLOR"
            android:textColor="#FFFFFF"
            android:textSize="28sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/chooseEyeColorTextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <ImageButton
                android:id="@+id/h1"
                android:layout_width="400dp"
                android:layout_height="500dp"
                android:background="@drawable/bggco"
                android:contentDescription="e1"
                android:scaleType="fitCenter"
                android:src="@drawable/h1" />

            <ImageButton
                android:id="@+id/h2"
                android:layout_width="400dp"
                android:layout_height="500dp"
                android:background="@drawable/bggco"
                android:scaleType="fitCenter"
                android:contentDescription="e2"
                android:src="@drawable/h2"/>

            <ImageButton
                android:id="@+id/h3"
                android:layout_width="400dp"
                android:layout_height="500dp"
                android:background="@drawable/bggco"
                android:scaleType="fitCenter"
                android:contentDescription="e3"
                android:src="@drawable/h3"/>

            <ImageButton
                android:id="@+id/h4"
                android:layout_width="400dp"
                android:layout_height="400dp"
                android:background="@drawable/bggco"
                android:scaleType="fitCenter"
                android:contentDescription="e3"
                android:src="@drawable/h4"/>



        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>